# EATECH Web App Environment Variables

# App Configuration
VITE_APP_NAME=EATECH
VITE_APP_VERSION=3.0.0
VITE_APP_URL=http://localhost:3000
VITE_API_URL=http://localhost:5001

# Firebase Configuration
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Features
VITE_FEATURE_VOICE_COMMERCE=true
VITE_FEATURE_OFFLINE_MODE=true
VITE_FEATURE_PUSH_NOTIFICATIONS=true
VITE_FEATURE_MULTI_LANGUAGE=true

# Payment
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_key
VITE_TWINT_ENABLED=true
VITE_POSTFINANCE_ENABLED=true

# Analytics
VITE_PLAUSIBLE_DOMAIN=localhost
VITE_PLAUSIBLE_API_HOST=https://plausible.io
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# Maps
VITE_MAPBOX_ACCESS_TOKEN=your-mapbox-token

# Localization
VITE_DEFAULT_LOCALE=de
VITE_SUPPORTED_LOCALES=de,fr,it,en

# Development
VITE_DEBUG_MODE=false
VITE_MOCK_API=false
