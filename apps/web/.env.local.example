# ======================================
# EATECH V3.0 - DEVELOPMENT ENVIRONMENT
# Copy to .env.local and fill with your values
# ======================================

# === APPLICATION SETTINGS ===
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=EATECH
NEXT_PUBLIC_APP_VERSION=3.0.0
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# === NEXT.JS CONFIGURATION ===
NEXT_TELEMETRY_DISABLED=1
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here

# === FIREBASE CONFIGURATION ===
# Get these from Firebase Console > Project Settings > General
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdef

# Firebase Admin (Server-side)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xyz@your-project.iam.gserviceaccount.com

# === AUTHENTICATION ===
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters
ENCRYPTION_KEY=your-32-byte-hex-encryption-key
COOKIE_SECRET=your-cookie-secret-key

# === PAYMENT PROVIDERS ===
# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Twint (Sandbox)
TWINT_MERCHANT_ID=your-twint-merchant-id
TWINT_API_KEY=your-twint-api-key
TWINT_ENDPOINT=https://sandbox.twint.ch/api

# PostFinance (Test)
POSTFINANCE_PSPID=your-postfinance-pspid
POSTFINANCE_API_KEY=your-postfinance-api-key
POSTFINANCE_ENDPOINT=https://e-payment-test.postfinance.ch

# === COMMUNICATION SERVICES ===
# Twilio (SMS & Voice)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+41791234567
TWILIO_VERIFY_SERVICE_SID=VAxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# SendGrid (Email)
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@eatech.ch
SENDGRID_FROM_NAME=EATECH

# === AI & ML SERVICES ===
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_ORG_ID=org-your-organization-id

# Google Cloud (Vision, Translation)
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
GOOGLE_CLOUD_API_KEY=your-gcp-api-key

# === ANALYTICS & MONITORING ===
# Plausible Analytics
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=localhost
NEXT_PUBLIC_PLAUSIBLE_API_HOST=https://plausible.io

# Sentry (Error Tracking)
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Mixpanel (Product Analytics)
NEXT_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token

# LogRocket (Session Recording)
NEXT_PUBLIC_LOGROCKET_APP_ID=your-logrocket-app-id

# === THIRD-PARTY INTEGRATIONS ===
# Mapbox (Maps)
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=pk.your-mapbox-token

# Algolia (Search)
NEXT_PUBLIC_ALGOLIA_APP_ID=your-algolia-app-id
NEXT_PUBLIC_ALGOLIA_SEARCH_API_KEY=your-algolia-search-key
ALGOLIA_ADMIN_API_KEY=your-algolia-admin-key

# Cloudinary (Image Upload & Processing)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# === WEBHOOKS ===
WEBHOOK_SECRET=your-webhook-secret-key
STRIPE_WEBHOOK_ENDPOINT=http://localhost:3000/api/webhooks/stripe
TWILIO_WEBHOOK_ENDPOINT=http://localhost:3000/api/webhooks/twilio

# === DATABASE (Additional) ===
# Redis (Caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# === LOCALIZATION ===
NEXT_PUBLIC_DEFAULT_LOCALE=de
NEXT_PUBLIC_SUPPORTED_LOCALES=de,fr,it,en

# === FEATURE FLAGS ===
NEXT_PUBLIC_FEATURE_VOICE_COMMERCE=true
NEXT_PUBLIC_FEATURE_AI_PRICING=true
NEXT_PUBLIC_FEATURE_BLOCKCHAIN=false
NEXT_PUBLIC_FEATURE_EVENT_MANAGEMENT=true
NEXT_PUBLIC_FEATURE_MULTI_TENANT=true

# === DEVELOPMENT TOOLS ===
# Turbo
TURBO_TOKEN=your-turbo-token
TURBO_TEAM=your-turbo-team

# Storybook
NEXT_PUBLIC_STORYBOOK_URL=http://localhost:6006

# === ENVIRONMENT SPECIFIC ===
DEBUG=false
VERBOSE_LOGGING=true
ENABLE_SOURCE_MAPS=true

# === SECURITY ===
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3002
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# === PWA CONFIGURATION ===
NEXT_PUBLIC_PWA_OFFLINE_FALLBACK=/offline
NEXT_PUBLIC_PWA_CACHE_STRATEGY=NetworkFirst

# === WEBHOOKS & EXTERNAL APIS ===
WEBHOOK_ENDPOINT_BASE=http://localhost:3000/api/webhooks
EXTERNAL_API_TIMEOUT=30000

# === MULTI-TENANT SETTINGS ===
TENANT_ISOLATION_MODE=strict
DEFAULT_TENANT_FEATURES=basic,analytics
TENANT_ONBOARDING_ENABLED=true

# === BACKUP & SYNC ===
BACKUP_ENABLED=false
SYNC_INTERVAL_MINUTES=30

# === ADMIN OVERRIDES ===
ADMIN_EMAIL=admin@eatech.ch
ADMIN_PHONE=+41791234567
SUPPORT_EMAIL=support@eatech.ch

# === SWISS SPECIFIC ===
DEFAULT_CURRENCY=CHF
DEFAULT_TAX_RATE=7.7
DEFAULT_CANTON=ZH
SWISS_QR_BILL_ENABLED=true

# === PERFORMANCE ===
IMAGE_OPTIMIZATION_ENABLED=true
CDN_ENABLED=false
CACHE_TTL_SECONDS=300

# === TESTING ===
TEST_DATABASE_URL=your-test-database-url
TEST_STRIPE_KEY=sk_test_your_test_key
CYPRESS_BASE_URL=http://localhost:3000

# ======================================
