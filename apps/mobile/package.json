{
  "name": "@eatech/mobile",
  "version": "25.0.0",
  "private": true,
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "eject": "expo eject",
    "test": "jest",
    "lint": "eslint .",
    "build:ios": "eas build --platform ios",
    "build:android": "eas build --platform android",
    "submit:ios": "eas submit --platform ios",
    "submit:android": "eas submit --platform android"
  },
  "dependencies": {
    "expo": "~53.0.0",
    "expo-status-bar": "~2.0.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-native": "0.79.0",
    "react-native-web": "~0.19.0",
    "react-native-webview": "13.12.2",
    "@react-navigation/native": "^6.1.0",
    "@react-navigation/stack": "^6.3.0",
    "react-native-screens": "~3.35.0",
    "react-native-safe-area-context": "4.14.0",
    "expo-notifications": "~0.30.0",
    "expo-device": "~7.0.0",
    "expo-constants": "~17.0.0",
    "expo-local-authentication": "~15.0.0",
    "expo-secure-store": "~14.0.0",
    "expo-network": "~6.0.0",
    "expo-file-system": "~18.0.0",
    "expo-background-fetch": "~13.0.0",
    "expo-task-manager": "~12.0.0",
    "@react-native-async-storage/async-storage": "2.1.0",
    "expo-quick-actions": "^3.0.0",
    "react-native-widget-kit": "^0.2.0",
    "expo-haptics": "~14.0.0",
    "react-native-gesture-handler": "~2.20.0",
    "react-native-reanimated": "~3.16.0",
    "expo-apple-authentication": "~7.0.0",
    "expo-firebase-analytics": "~9.0.0",
    "expo-firebase-recaptcha": "~3.0.0",
    "@react-native-firebase/app": "^21.0.0",
    "@react-native-firebase/auth": "^21.0.0",
    "@react-native-firebase/firestore": "^21.0.0",
    "@react-native-firebase/messaging": "^21.0.0",
    "react-native-offline": "^6.0.2",
    "react-native-watch-connectivity": "^1.0.11",
    "lottie-react-native": "7.0.0",
    "react-native-svg": "15.9.0",
    "react-native-linear-gradient": "^2.8.3"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@types/react": "~19.0.0",
    "@types/react-native": "~0.79.0",
    "typescript": "^5.5.0",
    "jest": "^29.7.0",
    "@testing-library/react-native": "^12.5.0",
    "eslint": "^8.57.0",
    "eslint-config-expo": "^8.0.0",
    "prettier": "^3.3.0"
  },
  "jest": {
    "preset": "react-native"
  },
  "eslintConfig": {
    "extends": "expo"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "expo": {
    "name": "EATECH Admin",
    "slug": "eatech-admin",
    "version": "25.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0A0A0A"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "ch.eatech.admin",
      "config": {
        "usesNonExemptEncryption": false
      },
      "infoPlist": {
        "NSFaceIDUsageDescription": "EATECH verwendet Face ID für sicheren Login",
        "NSCameraUsageDescription": "EATECH benötigt Kamera-Zugriff für Produktfotos",
        "NSPhotoLibraryUsageDescription": "EATECH benötigt Zugriff auf Fotos für Produktbilder"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0A0A0A"
      },
      "package": "ch.eatech.admin",
      "permissions": [
        "CAMERA",
        "USE_BIOMETRIC",
        "USE_FINGERPRINT",
        "VIBRATE",
        "RECEIVE_BOOT_COMPLETED"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-notifications",
      "expo-local-authentication",
      "expo-quick-actions"
    ]
  }
}