# ============================================================================
# EATECH MASTER CONTROL - ENVIRONMENT VARIABLES
# ============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env files to version control!
# 
# Author: EATECH Development Team
# Created: 2025-01-08
# File Path: /apps/master/.env.example
# ============================================================================

# ============================================================================
# APPLICATION
# ============================================================================
# Application Environment (development, staging, production)
VITE_APP_ENV=development

# Application URL
VITE_APP_URL=http://localhost:3001

# Application Name
VITE_APP_NAME="EATECH Master Control"

# Application Version (auto-updated by CI/CD)
VITE_APP_VERSION=1.0.0

# ============================================================================
# API CONFIGURATION
# ============================================================================
# Main API Endpoint
VITE_API_URL=https://api.eatech.ch

# Master API Key (High Security - Keep Secret!)
VITE_MASTER_API_KEY=your_master_api_key_here

# API Version
VITE_API_VERSION=v1

# API Timeout (milliseconds)
VITE_API_TIMEOUT=30000

# ============================================================================
# FIREBASE CONFIGURATION
# ============================================================================
# Firebase Project Settings
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_DATABASE_URL=https://your-project.firebasedatabase.app
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Firebase Admin SDK (Server-side only)
FIREBASE_ADMIN_PROJECT_ID=your-project-id
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================
# JWT Secret (Generate with: openssl rand -base64 32)
VITE_JWT_SECRET=your_jwt_secret_here

# Session Configuration
VITE_SESSION_TIMEOUT=1800000  # 30 minutes in milliseconds
VITE_SESSION_REFRESH_INTERVAL=300000  # 5 minutes

# Security Settings
VITE_MAX_LOGIN_ATTEMPTS=3
VITE_LOGIN_LOCKOUT_DURATION=900000  # 15 minutes
VITE_PASSWORD_MIN_LENGTH=12
VITE_REQUIRE_2FA=false

# CORS Origins (comma-separated)
VITE_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://eatech.ch

# ============================================================================
# FEATURE FLAGS
# ============================================================================
# Master Features
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_ADVANCED_ANALYTICS=true
VITE_ENABLE_BLOCKCHAIN=false
VITE_ENABLE_EDGE_COMPUTING=false
VITE_ENABLE_VOICE_COMMANDS=true
VITE_ENABLE_HEATMAPS=true
VITE_ENABLE_AB_TESTING=true

# System Features
VITE_ENABLE_DEBUG_MODE=false
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_AUDIT_LOGGING=true

# ============================================================================
# THIRD-PARTY SERVICES
# ============================================================================
# OpenAI Configuration
VITE_OPENAI_API_KEY=sk-...your_openai_key
VITE_OPENAI_ORGANIZATION=org-...your_org_id
VITE_OPENAI_MODEL=gpt-4-turbo-preview
VITE_OPENAI_MAX_TOKENS=4000

# Stripe Configuration
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_...
VITE_STRIPE_SECRET_KEY=sk_test_...
VITE_STRIPE_WEBHOOK_SECRET=whsec_...

# SendGrid Email
VITE_SENDGRID_API_KEY=SG...your_sendgrid_key
VITE_SENDGRID_FROM_EMAIL=noreply@eatech.ch
VITE_SENDGRID_TEMPLATE_PREFIX=eatech_

# Twilio SMS/Voice
VITE_TWILIO_ACCOUNT_SID=AC...
VITE_TWILIO_AUTH_TOKEN=...
VITE_TWILIO_PHONE_NUMBER=+41...

# Sentry Error Tracking
VITE_SENTRY_DSN=https://...@sentry.io/...
VITE_SENTRY_ENVIRONMENT=development
VITE_SENTRY_TRACES_SAMPLE_RATE=0.1

# Plausible Analytics
VITE_PLAUSIBLE_DOMAIN=master.eatech.ch
VITE_PLAUSIBLE_API_KEY=...

# ============================================================================
# MONITORING & LOGGING
# ============================================================================
# Datadog
VITE_DATADOG_APPLICATION_ID=...
VITE_DATADOG_CLIENT_TOKEN=...
VITE_DATADOG_SITE=datadoghq.eu
VITE_DATADOG_SERVICE=eatech-master

# LogRocket
VITE_LOGROCKET_APP_ID=...

# Grafana
VITE_GRAFANA_URL=https://grafana.eatech.ch
VITE_GRAFANA_API_KEY=...

# ============================================================================
# CLOUD SERVICES
# ============================================================================
# Cloudflare
VITE_CLOUDFLARE_ZONE_ID=...
VITE_CLOUDFLARE_API_TOKEN=...
VITE_CLOUDFLARE_ACCOUNT_ID=...

# AWS (for S3, Lambda, etc.)
VITE_AWS_ACCESS_KEY_ID=...
VITE_AWS_SECRET_ACCESS_KEY=...
VITE_AWS_REGION=eu-central-1
VITE_AWS_S3_BUCKET=eatech-master-assets

# ============================================================================
# DEVELOPMENT TOOLS
# ============================================================================
# Hot Module Replacement
VITE_HMR_HOST=localhost
VITE_HMR_PORT=3001

# Source Maps
VITE_GENERATE_SOURCEMAP=true

# Mock API (for development)
VITE_USE_MOCK_API=false
VITE_MOCK_API_DELAY=500

# ============================================================================
# DEPLOYMENT
# ============================================================================
# Build Configuration
VITE_BUILD_TARGET=esnext
VITE_BUILD_MINIFY=true
VITE_BUILD_SOURCEMAP=false

# CDN Configuration
VITE_CDN_URL=https://cdn.eatech.ch
VITE_ASSET_PREFIX=/assets/

# Cache Control
VITE_CACHE_VERSION=1
VITE_CACHE_MAX_AGE=31536000  # 1 year for assets

# ============================================================================
# MASTER ADMIN SPECIFIC
# ============================================================================
# Super Admin Credentials (First-time setup only)
VITE_SUPER_ADMIN_EMAIL=admin@eatech.ch
VITE_SUPER_ADMIN_SETUP_KEY=...  # One-time setup key

# Master Control Limits
VITE_MAX_TENANTS=1000
VITE_MAX_CONCURRENT_OPERATIONS=50
VITE_BULK_OPERATION_BATCH_SIZE=100

# System Thresholds
VITE_CPU_WARNING_THRESHOLD=70
VITE_CPU_CRITICAL_THRESHOLD=90
VITE_MEMORY_WARNING_THRESHOLD=80
VITE_MEMORY_CRITICAL_THRESHOLD=95
VITE_ERROR_RATE_WARNING_THRESHOLD=0.05
VITE_ERROR_RATE_CRITICAL_THRESHOLD=0.10

# ============================================================================
# EXPERIMENTAL FEATURES (Use with caution!)
# ============================================================================
VITE_ENABLE_EXPERIMENTAL_UI=false
VITE_ENABLE_BETA_FEATURES=false
VITE_ENABLE_CANARY_DEPLOYMENTS=false

# ============================================================================
# NOTES
# ============================================================================
# 1. Generate secure keys with: openssl rand -base64 32
# 2. Use different values for each environment
# 3. Rotate keys regularly (especially API keys)
# 4. Monitor key usage in production
# 5. Use secret management tools in production (e.g., Vault, AWS Secrets Manager)
# ============================================================================