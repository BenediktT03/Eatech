{
  "name": "@eatech/functions",
  "version": "3.0.0",
  "description": "Firebase Cloud Functions for EATECH Platform",
  "main": "lib/index.js",
  "private": true,
  "engines": {
    "node": "20"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "deploy:prod": "firebase deploy --only functions --project production",
    "logs": "firebase functions:log",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "format": "prettier --write 'src/**/*.{ts,tsx,json}'",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@eatech/core": "workspace:*",
    "@eatech/types": "workspace:*",
    "@eatech/utils": "workspace:*",
    "@google-cloud/firestore": "^7.11.0",
    "@google-cloud/storage": "^7.14.0",
    "@sendgrid/mail": "^8.1.6",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "firebase-admin": "^13.0.1",
    "firebase-functions": "^6.2.0",
    "joi": "^17.13.3",
    "lodash": "^4.17.21",
    "moment-timezone": "^0.5.47",
    "node-fetch": "^3.3.2",
    "sharp": "^0.33.5",
    "stripe": "^17.6.0",
    "twilio": "^5.4.0",
    "uuid": "^11.0.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.13",
    "@types/node": "^22.10.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "eslint": "^9.17.0",
    "firebase-functions-test": "^3.3.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2"
  }
}
