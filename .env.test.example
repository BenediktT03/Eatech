# ======================================
# EATECH V3.0 - TEST ENVIRONMENT
# Copy to .env.test for running tests
# ======================================

# === APPLICATION SETTINGS ===
NODE_ENV=test
NEXT_PUBLIC_APP_NAME=EATECH_TEST
NEXT_PUBLIC_APP_VERSION=3.0.0-test
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:5001

# === FIREBASE CONFIGURATION (TEST) ===
NEXT_PUBLIC_FIREBASE_API_KEY=test-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=test.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=eatech-test
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=eatech-test.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=999999999
NEXT_PUBLIC_FIREBASE_APP_ID=1:999999999:web:test

# Firebase Test Mode
USE_FIREBASE_EMULATOR=true
FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
FIRESTORE_EMULATOR_HOST=localhost:8080
FIREBASE_STORAGE_EMULATOR_HOST=localhost:9199

# === TEST CONFIGURATION ===
TEST_TIMEOUT=30000
TEST_RETRIES=2
PARALLEL_TESTS=true
COVERAGE_THRESHOLD=80

# === MOCK SERVICES ===
USE_MOCK_PAYMENT=true
USE_MOCK_EMAIL=true
USE_MOCK_SMS=true
USE_MOCK_AI=true

# === TEST USERS ===
TEST_ADMIN_EMAIL=admin@test.eatech.ch
TEST_ADMIN_PASSWORD=testadmin123
TEST_USER_EMAIL=user@test.eatech.ch
TEST_USER_PASSWORD=testuser123
TEST_TENANT_ID=test-tenant-001

# === FEATURE FLAGS (ALL ENABLED FOR TESTING) ===
NEXT_PUBLIC_FEATURE_VOICE_COMMERCE=true
NEXT_PUBLIC_FEATURE_AI_PRICING=true
NEXT_PUBLIC_FEATURE_BLOCKCHAIN=true
NEXT_PUBLIC_FEATURE_EVENT_MANAGEMENT=true
NEXT_PUBLIC_FEATURE_MULTI_TENANT=true
NEXT_PUBLIC_FEATURE_BETA_FEATURES=true

# === TEST DATABASE ===
TEST_DB_SEED=true
TEST_DB_CLEANUP=true
TEST_DB_FIXTURES_PATH=./tests/fixtures

# === E2E TESTING ===
E2E_BASE_URL=http://localhost:3000
E2E_HEADLESS=true
E2E_SLOW_MO=0
E2E_SCREENSHOT_ON_FAILURE=true
E2E_VIDEO_ON_FAILURE=false

# === PERFORMANCE TESTING ===
LOAD_TEST_USERS=100
LOAD_TEST_DURATION=60
STRESS_TEST_USERS=1000

# === LOGGING (MINIMAL FOR TESTS) ===
LOG_LEVEL=error
ENABLE_REQUEST_LOGGING=false
SILENT_MODE=true

# === DISABLE EXTERNAL SERVICES ===
DISABLE_ANALYTICS=true
DISABLE_ERROR_TRACKING=true
DISABLE_PERFORMANCE_MONITORING=true

# === CI/CD INTEGRATION ===
CI=true
GITHUB_ACTIONS=true
