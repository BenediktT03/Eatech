rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Tenant-spezifische Ordner
    match /tenants/{tenantId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && 
        (request.auth.uid == tenantId || 
         firestore.get(/databases/(default)/documents/tenants/$(tenantId)/users/$(request.auth.uid)).data.role == 'admin');
    }
    
    // Ã–ffentliche Assets
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}