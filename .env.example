# EATECH Environment Variables
# Copy this file to .env.local and fill in your values

# App URLs
VITE_APP_URL=http://localhost:3000
VITE_API_URL=http://localhost:5001/eatech-foodtruck/europe-west1

# Firebase (Already configured in firebase.config.ts)
# No need to add Firebase config here as it's public

# Stripe
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_STRIPE_PUBLISHABLE_KEY
STRIPE_SECRET_KEY=sk_test_YOUR_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET

# OpenAI
OPENAI_API_KEY=sk-YOUR_OPENAI_API_KEY

# Sentry
SENTRY_DSN=https://YOUR_SENTRY_DSN@sentry.io/YOUR_PROJECT_ID

# Plausible Analytics
VITE_PLAUSIBLE_DOMAIN=eatech.ch

# Email (SendGrid)
SENDGRID_API_KEY=YOUR_SENDGRID_API_KEY
EMAIL_FROM=noreply@eatech.ch

# Twilio (for SMS - sp√§ter)
TWILIO_ACCOUNT_SID=YOUR_TWILIO_ACCOUNT_SID
TWILIO_AUTH_TOKEN=YOUR_TWILIO_AUTH_TOKEN
TWILIO_PHONE_NUMBER=+41XXXXXXXXX

# Google Maps (for location features)
VITE_GOOGLE_MAPS_API_KEY=YOUR_GOOGLE_MAPS_API_KEY

# Weather API (for predictions)
WEATHER_API_KEY=YOUR_WEATHER_API_KEY

# Event APIs (optional)
FACEBOOK_APP_ID=YOUR_FACEBOOK_APP_ID
FACEBOOK_APP_SECRET=YOUR_FACEBOOK_APP_SECRET

# Development
NODE_ENV=development
DEBUG=eatech:*

# Feature Flags (override defaults)
FEATURE_VOICE_ORDERING=true
FEATURE_SMART_NOTIFICATIONS=true
FEATURE_DYNAMIC_PRICING=true
FEATURE_PREDICTIVE_MAINTENANCE=true

# Business Configuration (override defaults)
PLATFORM_FEE_PERCENTAGE=3
TRIAL_PERIOD_DAYS=90
DAILY_ORDER_NUMBER_START=100

# Cloudflare (optional)
CLOUDFLARE_ACCOUNT_ID=YOUR_CLOUDFLARE_ACCOUNT_ID
CLOUDFLARE_API_TOKEN=YOUR_CLOUDFLARE_API_TOKEN

# Monitoring
DATADOG_API_KEY=YOUR_DATADOG_API_KEY
LOGROCKET_APP_ID=YOUR_LOGROCKET_APP_ID
