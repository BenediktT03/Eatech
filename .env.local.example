# ======================================
# EATECH V3.0 - LOCAL DEVELOPMENT ENVIRONMENT
# Copy to .env.local and configure for local development
# ======================================

# === APPLICATION SETTINGS ===
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=EATECH
NEXT_PUBLIC_APP_VERSION=3.0.0
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:5001

# === FIREBASE CONFIGURATION (LOCAL EMULATOR) ===
NEXT_PUBLIC_FIREBASE_API_KEY=demo-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=localhost
NEXT_PUBLIC_FIREBASE_PROJECT_ID=demo-eatech
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=demo-eatech.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdef

# Firebase Emulator Settings
FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
FIRESTORE_EMULATOR_HOST=localhost:8080
FIREBASE_STORAGE_EMULATOR_HOST=localhost:9199
FIREBASE_FUNCTIONS_EMULATOR_HOST=localhost:5001

# === AUTHENTICATION (LOCAL) ===
JWT_SECRET=local-development-jwt-secret-not-for-production
NEXTAUTH_SECRET=local-development-nextauth-secret
NEXTAUTH_URL=http://localhost:3000

# === PAYMENT PROVIDERS (TEST MODE) ===
# Stripe Test
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_key
STRIPE_SECRET_KEY=sk_test_your_stripe_test_secret_key
STRIPE_WEBHOOK_SECRET=whsec_test_webhook_secret

# Twint Test
TWINT_MERCHANT_ID=test-merchant-id
TWINT_API_KEY=test-api-key
TWINT_ENDPOINT=https://test.twint.ch/v1

# === AI & ML SERVICES (DEVELOPMENT) ===
OPENAI_API_KEY=sk-test-your-openai-test-key
GOOGLE_CLOUD_PROJECT_ID=eatech-dev

# === ANALYTICS (DEVELOPMENT) ===
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=localhost
NEXT_PUBLIC_SENTRY_DSN=https://test@sentry.io/test
NEXT_PUBLIC_MIXPANEL_TOKEN=test-mixpanel-token

# === FEATURE FLAGS (DEVELOPMENT) ===
NEXT_PUBLIC_FEATURE_VOICE_COMMERCE=true
NEXT_PUBLIC_FEATURE_AI_PRICING=true
NEXT_PUBLIC_FEATURE_BLOCKCHAIN=false
NEXT_PUBLIC_FEATURE_EVENT_MANAGEMENT=true
NEXT_PUBLIC_FEATURE_MULTI_TENANT=true
NEXT_PUBLIC_FEATURE_BETA_FEATURES=true
NEXT_PUBLIC_FEATURE_DEBUG_MODE=true

# === DEVELOPMENT TOOLS ===
NEXT_PUBLIC_SHOW_DEBUG_INFO=true
NEXT_PUBLIC_ENABLE_REACT_DEVTOOLS=true
NEXT_PUBLIC_ENABLE_REDUX_DEVTOOLS=true

# === LOCALIZATION ===
NEXT_PUBLIC_DEFAULT_LOCALE=de
NEXT_PUBLIC_SUPPORTED_LOCALES=de,fr,it,en

# === SWISS SETTINGS ===
DEFAULT_CURRENCY=CHF
DEFAULT_TAX_RATE=7.7
DEFAULT_CANTON=ZH

# === PWA CONFIGURATION ===
NEXT_PUBLIC_PWA_OFFLINE_FALLBACK=/offline
NEXT_PUBLIC_PWA_CACHE_STRATEGY=NetworkFirst

# === DEVELOPMENT HELPERS ===
# Mock user for quick login
DEV_MOCK_USER_EMAIL=dev@eatech.ch
DEV_MOCK_USER_PASSWORD=dev123456

# Skip onboarding
SKIP_ONBOARDING=true

# Auto-reload
AUTO_RELOAD=true

# === LOGGING ===
LOG_LEVEL=debug
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_TRACKING=false

# === CORS (LOCAL) ===
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3002

# === RATE LIMITING (DISABLED FOR DEV) ===
RATE_LIMIT_ENABLED=false
