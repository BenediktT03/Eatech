# ======================================
# EATECH V3.0 - PRODUCTION ENVIRONMENT
# Copy to .env.production and configure for production
# ======================================

# === APPLICATION SETTINGS ===
NODE_ENV=production
NEXT_PUBLIC_APP_NAME=EATECH
NEXT_PUBLIC_APP_VERSION=3.0.0
NEXT_PUBLIC_APP_URL=https://app.eatech.ch
NEXT_PUBLIC_API_URL=https://api.eatech.ch

# === NEXT.JS CONFIGURATION ===
NEXT_TELEMETRY_DISABLED=1
NEXTAUTH_URL=https://app.eatech.ch
NEXTAUTH_SECRET=your-production-nextauth-secret-super-strong-32+chars

# === FIREBASE CONFIGURATION (PRODUCTION) ===
NEXT_PUBLIC_FIREBASE_API_KEY=your-production-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=eatech-prod.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=eatech-prod
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=eatech-prod.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdef

# Firebase Admin (Production)
FIREBASE_PROJECT_ID=eatech-prod
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRODUCTION_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xyz@eatech-prod.iam.gserviceaccount.com

# === AUTHENTICATION (PRODUCTION SECRETS) ===
JWT_SECRET=your-production-jwt-secret-minimum-64-characters-super-secure
ENCRYPTION_KEY=your-production-32-byte-hex-encryption-key-very-secure
COOKIE_SECRET=your-production-cookie-secret-key-also-very-secure

# === PAYMENT PROVIDERS (LIVE) ===
# Stripe Live
