# Cloudflare (CDN & Security)
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id

# Cloudinary Production
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=eatech-production
CLOUDINARY_API_KEY=your-production-cloudinary-api-key
CLOUDINARY_API_SECRET=your-production-cloudinary-api-secret

# === WEBHOOKS (PRODUCTION) ===
WEBHOOK_SECRET=your-production-webhook-secret-key-super-secure
STRIPE_WEBHOOK_ENDPOINT=https://api.eatech.ch/webhooks/stripe
TWILIO_WEBHOOK_ENDPOINT=https://api.eatech.ch/webhooks/twilio

# === DATABASE & CACHING (PRODUCTION) ===
# Redis Production (Upstash/AWS ElastiCache)
REDIS_URL=rediss://your-production-redis-url:6380
REDIS_PASSWORD=your-production-redis-password

# === CDN & STORAGE ===
CDN_URL=https://cdn.eatech.ch
STATIC_ASSETS_URL=https://static.eatech.ch

# === LOCALIZATION ===
NEXT_PUBLIC_DEFAULT_LOCALE=de
NEXT_PUBLIC_SUPPORTED_LOCALES=de,fr,it,en

# === FEATURE FLAGS (PRODUCTION) ===
NEXT_PUBLIC_FEATURE_VOICE_COMMERCE=true
NEXT_PUBLIC_FEATURE_AI_PRICING=true
NEXT_PUBLIC_FEATURE_BLOCKCHAIN=false
NEXT_PUBLIC_FEATURE_EVENT_MANAGEMENT=true
NEXT_PUBLIC_FEATURE_MULTI_TENANT=true
NEXT_PUBLIC_FEATURE_BETA_FEATURES=false

# === PRODUCTION TOOLS ===
# Turbo Remote Cache
TURBO_TOKEN=your-production-turbo-token
TURBO_TEAM=eatech-production

# === SECURITY (PRODUCTION) ===
CORS_ORIGIN=https://app.eatech.ch,https://admin.eatech.ch,https://master.eatech.ch
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW_MS=900000
ENABLE_DDOS_PROTECTION=true
ENABLE_WAF=true

# === PWA CONFIGURATION (PRODUCTION) ===
NEXT_PUBLIC_PWA_OFFLINE_FALLBACK=/offline
NEXT_PUBLIC_PWA_CACHE_STRATEGY=NetworkFirst
PWA_START_URL=https://app.eatech.ch

# === WEBHOOKS & EXTERNAL APIS ===
WEBHOOK_ENDPOINT_BASE=https://api.eatech.ch/webhooks
EXTERNAL_API_TIMEOUT=10000

# === MULTI-TENANT SETTINGS (PRODUCTION) ===
TENANT_ISOLATION_MODE=strict
DEFAULT_TENANT_FEATURES=basic,analytics,ai
TENANT_ONBOARDING_ENABLED=true
MAX_TENANTS_PER_PLAN=1000

# === BACKUP & SYNC (PRODUCTION) ===
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 3 * * *
SYNC_INTERVAL_MINUTES=5

# === ADMIN & SUPPORT (PRODUCTION) ===
ADMIN_EMAIL=admin@eatech.ch
ADMIN_PHONE=+41443336677
SUPPORT_EMAIL=support@eatech.ch
EMERGENCY_CONTACT=+41791234567

# === SWISS COMPLIANCE (PRODUCTION) ===
DEFAULT_CURRENCY=CHF
DEFAULT_TAX_RATE=7.7
DEFAULT_CANTON=ZH
SWISS_QR_BILL_ENABLED=true
DATA_RESIDENCY=CH
GDPR_COMPLIANCE_MODE=strict

# === PERFORMANCE (PRODUCTION) ===
IMAGE_OPTIMIZATION_ENABLED=true
CDN_ENABLED=true
CACHE_TTL_SECONDS=3600
COMPRESSION_ENABLED=true
HTTP2_ENABLED=true

# === SSL & CERTIFICATES ===
SSL_CERT_PATH=/etc/ssl/certs/eatech.ch.crt
SSL_KEY_PATH=/etc/ssl/private/eatech.ch.key
HSTS_MAX_AGE=31536000

# === LOGGING & MONITORING ===
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_TRACKING=true
METRICS_COLLECTION_ENABLED=true

# === SCALING & INFRASTRUCTURE ===
MAX_CONCURRENT_REQUESTS=10000
AUTO_SCALING_ENABLED=true
LOAD_BALANCER_HEALTH_CHECK=/api/health

# === BUSINESS LOGIC ===
SUBSCRIPTION_PRICE_CHF=49.00
FREE_TRIAL_DAYS=14
MAX_ORDERS_PER_MINUTE=1000
ORDER_TIMEOUT_MINUTES=15

# === INTEGRATIONS (PRODUCTION) ===
# Accounting Software
BEXIO_API_KEY=your-bexio-api-key
ABACUS_API_KEY=your-abacus-api-key

# Banking
UBS_API_KEY=your-ubs-api-key
CREDIT_SUISSE_API_KEY=your-cs-api-key

# Government APIs
SWISS_BUSINESS_REGISTRY_API=your-registry-api-key
TAX_AUTHORITY_API=your-tax-api-key

# === DISASTER RECOVERY ===
BACKUP_RETENTION_DAYS=90
DISASTER_RECOVERY_ENDPOINT=https://dr.eatech.ch
FAILOVER_ENABLED=true

# === COMPLIANCE & AUDIT ===
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years
GDPR_DATA_RETENTION_DAYS=2555
FINANCIAL_DATA_RETENTION_DAYS=3650  # 10 years
ENABLE_AUDIT_TRAIL=true

