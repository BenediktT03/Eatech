# EATECH Firebase Functions Environment Variables
# Copy this file to .env and fill in your values

# Environment
NODE_ENV=development
FUNCTIONS_EMULATOR=true

# Firebase Configuration
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project-id.iam.gserviceaccount.com

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_API_VERSION=2023-10-16

# Twilio Configuration
TWILIO_ACCOUNT_SID=AC_your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+41XXXXXXXXX
TWILIO_MESSAGING_SERVICE_SID=MG_your_messaging_service_sid

# SendGrid Configuration
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@eatech.ch
SENDGRID_FROM_NAME=EATECH
SENDGRID_TEMPLATE_ORDER_CONFIRMATION=d-template_id
SENDGRID_TEMPLATE_ORDER_READY=d-template_id
SENDGRID_TEMPLATE_PASSWORD_RESET=d-template_id
SENDGRID_TEMPLATE_WELCOME=d-template_id

# SMTP Configuration (Alternative to SendGrid)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Push Notification Configuration
FCM_SERVER_KEY=your_fcm_server_key
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key

# OpenAI Configuration
OPENAI_API_KEY=sk-your_openai_api_key
OPENAI_ORGANIZATION=org-your_org_id
OPENAI_MODEL=gpt-4-turbo-preview

# Google Maps Configuration
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Analytics Configuration
GOOGLE_ANALYTICS_MEASUREMENT_ID=G-XXXXXXXXXX
PLAUSIBLE_API_KEY=your_plausible_api_key
PLAUSIBLE_DOMAIN=eatech.ch

# Sentry Configuration
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
SENTRY_ENVIRONMENT=production
SENTRY_RELEASE=1.0.0

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# Database URLs
MONGODB_URI=mongodb://localhost:27017/eatech
POSTGRES_URL=postgresql://user:password@localhost:5432/eatech

# Security Keys
JWT_SECRET=your_super_secret_jwt_key
ENCRYPTION_KEY=your_32_character_encryption_key
WEBHOOK_SECRET=your_webhook_verification_secret

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Storage Configuration
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_ACCESS_KEY_ID=your_access_key_id
CLOUDFLARE_SECRET_ACCESS_KEY=your_secret_access_key
CLOUDFLARE_BUCKET_NAME=eatech-assets

# Email Configuration
SUPPORT_EMAIL=support@eatech.ch
ADMIN_EMAIL=admin@eatech.ch
NO_REPLY_EMAIL=noreply@eatech.ch

# URLs
APP_URL=https://app.eatech.ch
ADMIN_URL=https://admin.eatech.ch
API_URL=https://api.eatech.ch
WEBHOOK_URL=https://api.eatech.ch/webhooks

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
ENABLE_ERROR_REPORTING=true

# Tenant Configuration
DEFAULT_CURRENCY=CHF
DEFAULT_LANGUAGE=de
DEFAULT_TIMEZONE=Europe/Zurich
DEFAULT_TAX_RATE=7.7

# Limits
MAX_FILE_SIZE=10485760
MAX_MENU_ITEMS=500
MAX_ORDERS_PER_DAY=1000
MAX_CUSTOMERS_PER_TENANT=10000

# Cron Jobs
CLEANUP_SCHEDULE="0 2 * * *"
ANALYTICS_SCHEDULE="0 * * * *"
BACKUP_SCHEDULE="0 3 * * *"
REPORT_SCHEDULE="0 6 * * 1"

# Debug
DEBUG=false
LOG_LEVEL=info
ENABLE_PROFILING=false

# Testing
TEST_MODE=false
TEST_PHONE_NUMBER=+41XXXXXXXXX
TEST_EMAIL=test@eatech.ch

# Backup Configuration
BACKUP_BUCKET=gs://eatech-backups
BACKUP_RETENTION_DAYS=30

# Monitoring
UPTIME_ROBOT_API_KEY=your_uptime_robot_key
DATADOG_API_KEY=your_datadog_api_key
NEW_RELIC_LICENSE_KEY=your_new_relic_key    